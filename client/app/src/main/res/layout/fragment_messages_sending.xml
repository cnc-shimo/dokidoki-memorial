<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/layout_sending_message">

    <TextView
        android:text="Note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_text_sending_title"
        android:hint="title" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edit_text_sending_message"
        android:layout_weight="0.61"
        android:gravity="top"
        android:hint="message..."
        android:layout_height="30dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="36dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_heart"
            android:id="@+id/imageView"
            android:layout_weight="1" />

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="5"
            android:thumb="@drawable/ic_tenbin"
            android:id="@+id/FrustrationBar"
            android:layout_weight="1"
            android:layout_width="240dp" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_bomb_icon"
            android:id="@+id/imageView2"
            android:layout_weight="1"
            android:layout_width="wrap_content" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_weight="0.00"
        android:layout_height="50dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="55dp" />

        <Button
            android:layout_width="45dp"
            android:background="@drawable/ic_pen"
            android:id="@+id/button_send"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal|bold"
            android:textAllCaps="false" />

        <Space
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="60dp" />

    </LinearLayout>


</LinearLayout>